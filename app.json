{
  "expo": {
    "name": "SpeakFlow",
    "slug": "speakflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.speakflow.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SpeakFlow needs microphone access for pronunciation practice and speech recognition.",
        "NSSpeechRecognitionUsageDescription": "SpeakFlow uses speech recognition to analyze your pronunciation and provide feedback."
      }
    },
    "android": {
      "package": "com.speakflow.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow SpeakFlow to access your microphone for pronunciation practice."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id-here"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
} 